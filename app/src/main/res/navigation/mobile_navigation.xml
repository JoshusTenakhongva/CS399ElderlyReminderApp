<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.elderlyreminderapp.ui.home.CalendarActivity"
        android:label="@string/title_home"
        tools:layout="@layout/calendar_layout" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.elderlyreminderapp.ui.dashboard.TaskActivity"
        android:label="@string/title_dashboard"
        tools:layout="@layout/Task_layout" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.elderlyreminderapp.ui.notifications.WeatherActivity"
        android:label="@string/title_notifications"
        tools:layout="@layout/weather_layout" />
</navigation>